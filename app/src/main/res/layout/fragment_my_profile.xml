<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.MyProfileFragment">


    <Button
        android:id="@+id/btn_create_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="@string/create_profile"
        android:visibility="visible"
        app:icon="@drawable/ic_round_account_box_24"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_greeting_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/day_night_greetings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/auth_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/txt_greeting_user"
        app:layout_constraintStart_toStartOf="@+id/txt_greeting_user"
        app:layout_constraintTop_toBottomOf="@+id/txt_greeting_user" />

    <TextView
        android:id="@+id/txt_please_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/please_create_your_profile_so_as_to_access_our_services"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/auth_username"
        app:layout_constraintStart_toStartOf="@+id/auth_username"
        app:layout_constraintTop_toBottomOf="@+id/auth_username" />

    <ImageView
        android:id="@+id/img_no_acivity_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/img_no_events_holder"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_profile"
        app:layout_constraintEnd_toEndOf="@+id/txt_please_create"
        app:layout_constraintStart_toStartOf="@+id/txt_please_create"
        app:layout_constraintTop_toBottomOf="@+id/txt_please_create"
        tools:ignore="ImageContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>